<PlayMenu>:
    name: "play_menu"
    md_bg_color: [0/255,170/255,0/255,1]
    MDAnchorLayout:
        padding: dp(25)
        anchor_x: 'center'
        anchor_y: 'top'
        MDLabel:
            text: "Up & Down"
            font_style: "H2"
            font_name: "fonts/refik/Refik.ttf"
            color: 0, 0, 0, 1
            size_hint: 1, None
            size: dp(100), dp(250)
            halign: "center"
            valign: "bottom"
    MDAnchorLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, 0.5
            height: self.minimum_height
            width: self.minimum_width
            spacing: dp(10)
            md_bg_color: [255/255,255/255,255/255,1]
            padding: dp(20)
            MDTextField:
                id: name_input 
                hint_text: "Write your name"
                helper_text: "Provide a name with max. 7 char."
                helper_text_mode: "on_error"
                multiline: False
                size_hint: 1, None
                size: dp(100), dp(50)
                max_text_length: 7
            MDTextField:
                id: ip_input 
                hint_text: "Write the IP address"
                helper_text: "Provide IP address (on dots)"
                helper_text_mode: "on_error"
                multiline: False
                size_hint: 1, None
                size: dp(100), dp(50)
            MDTextField:
                id: port_input
                hint_text: "Write the port number"
                helper_text: "Please provide port number"
                helper_text_mode: "on_error"
                multiline: False
                size_hint: 1, None
                size: dp(100), dp(50)
            MDTextButton:
                md_bg_color: [50/255,50/255,50/255,1]
                text: "Create new game"
                halign: "center"
                on_release: root.on_create_room()
                size_hint: 1, 0.7
                # size: dp(100), dp(100)
                color: [200/255,200/255,200/255,1]
            MDTextButton:
                md_bg_color: [50/255,50/255,50/255,1]
                text: "Join game"
                halign: "center"
                size_hint: 1, 0.7
                # size: dp(100), dp(100)
                on_release: root.on_enter_room()
                color: [200/255,200/255,200/255,1]

