<PlayMenu>:
    name: "play_menu"
    md_bg_color: [0/255,170/255,0/255,1]
    MDAnchorLayout:
        padding: dp(25)
        anchor_x: 'center'
        anchor_y: 'top'
        MDLabel:
            text: "Up & Down"
            font_style: "H2"
            font_name: "fonts/refik/RefikBook.ttf"
            color: 1, 1, 1, 1
            size_hint: 1, None
            size: dp(100), dp(250)
            halign: "center"
            valign: "bottom"
            outline_color: 0,0,0
            outline_width: 4

    MDAnchorLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, 0.5
            height: self.minimum_height
            width: self.minimum_width
            spacing: dp(10)
            md_bg_color: [255/255, 255/255, 255/255, 1]
            padding: dp(20)
            MDTextField:
                id: name_input 
                hint_text: "Write your name"
                helper_text: "Provide a name with max. 7 char."
                helper_text_mode: "on_error"
                multiline: False
                size_hint: 1, None
                size: dp(100), dp(50)
                max_text_length: 7
            MDTextField:
                id: ip_input
                hint_text: "Write the IP address"
                helper_text: "Provide IP address"
                helper_text_mode: "on_error"
                multiline: False
                size_hint: 1, None
                size: dp(100), dp(50)
            MDTextField:
                id: port_input
                hint_text: "Write the port number"
                helper_text: "Please provide port number"
                helper_text_mode: "on_error"
                multiline: False
                size_hint: 1, None
                size: dp(100), dp(50)
            MDTextButton:
                md_bg_color: [50/255,50/255,50/255,1]
                text: "Create new game"
                halign: "center"
                on_release: root.on_create_room()
                size_hint: 1, 0.7
                # size: dp(100), dp(100)
                color: [200/255,200/255,200/255,1]
            MDTextButton:
                md_bg_color: [50/255,50/255,50/255,1]
                text: "Join game"
                halign: "center"
                size_hint: 1, 0.7
                # size: dp(100), dp(100)
                on_release: root.on_enter_room()
                color: [200/255,200/255,200/255,1]

<Lobby>
    name: "lobby"
    md_bg_color: 0/255, 170/255, 0/255, 1
    MDAnchorLayout:
        padding: dp(25)
        anchor_x: 'center'
        anchor_y: 'top'
        MDLabel:
            text: "Players"
            font_style: "H2"
            font_name: "fonts/refik/RefikBook.ttf"
            color: 1, 1, 1, 1
            size_hint: 1, None
            size: dp(100), dp(250)
            halign: "center"
            valign: "center"
            outline_color: 0,0,0
            outline_width: 3
            text_size: self.size
    MDAnchorLayout:
        MDBoxLayout:
            size_hint: 0.9, 0.55
            height: self.minimum_height
            width: self.minimum_width
            orientation: "vertical"
            padding: dp(25)
            MDGridLayout:
                id: players_grid
                rows: 5
            MDBoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.4
                height: self.minimum_height
                width: self.minimum_width
                spacing: dp(25)
                padding: dp(25)
                MDTextButton:
                    md_bg_color: [50/255,50/255,50/255,1]
                    text: 'Leave'
                    halign: "center"
                    valign: "center"
                    size_hint: 1, 1
                    color: [200/255,200/255,200/255,1]
                    on_release: root.on_leave_btn()
                MDTextButton:
                    id: play_btn
                    md_bg_color: [50/255,50/255,50/255,1]
                    text: 'Play'
                    halign: "center"
                    valign: "center"
                    size_hint: 1, 1
                    color: [200/255,200/255,200/255,1]
                    # on_release: root.on_play_btn()

<GamePlay>:
    #:set card_size_hint (0.3, 0.23)
    name: "game_play"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 0/255, 170/255, 0/255, 1
        spacing: dp(25)
        padding: dp(10)
        Button:
            md_bg_color: [50/255,50/255,50/255,1]
            text: 'X'
            halign: "center"
            valign: "center"
            size_hint: None, None
            height: dp(50)
            width: dp(50)
            pos_hint: {'right': 1.0,'center_y': 0.0}
            color: [200/255,200/255,200/255,1]
        MDAnchorLayout:
            MDRelativeLayout:
                size_hint: 0.95, 0.95
                spacing: dp(20)
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 0.33, 'top': 0.25}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 0.33,'top': 0.5}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 0.33,'top': 0.75}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 0.33,'top': 1.0}
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {'center_x': 0.53,'center_y': 0.55}
                    size_hint: 0.25, 0.25
                    spacing: dp(5)
                    MDLabel:
                        markup: True
                        text: "[b]Wild Card[/b]"
                        size_hint: None, None
                        size: self.texture_size
                        text_size: None, None
                        pos_hint: {'center_x': 0.5,'center_y': 0.0}
                    MDAnchorLayout:
                        Image:
                            md_bg_color: 0/255, 170/255, 0/255, 1
                            source: "images/2_of_clubs.png"
                            allow_stretch: False
                            size_hint: 0.75, 1.0
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 0.66, 'top': 0.25}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 0.66, 'top': 1.0}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 1.0, 'top': 0.25}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 1.0, 'top': 0.5}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 1.0, 'top': 0.75}
                PlayerSpot:
                    size_hint: card_size_hint
                    pos_hint: {'right': 1.0, 'top': 1.0}
        Button:
            text: "test"
            color: 1, 0, 0, 1
            size_hint: 1, 0.2
        
<PlayerSpot>:
    orientation: "vertical"
    spacing: dp(10)
    MDLabel:
        markup: True
        text: "[b]MY NAME[/b]"
        color: 0, 0, 0, 1
        size_hint: None, None
        size: self.texture_size
        text_size: None, None
        pos_hint: {'center_x': 0.5,'center_y': 0.0}
    Image:
        source: "images/2_of_clubs.png"
        allow_stretch: False
        size_hint: 0.75, 1
        pos_hint: {'center_x': 0.5,'center_y': 0.0}
    MDLabel:
        markup: True
        text: "[b]0 | 0[/b]"
        size_hint: None, None
        size: self.texture_size
        text_size: None, None
        pos_hint: {'center_x': 0.5,'center_y': 0.0}

